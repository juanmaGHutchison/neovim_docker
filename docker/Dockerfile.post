ARG BASE_IMAGE="debian"
FROM $BASE_IMAGE

ARG NVIM_METADATA=nvim
ARG ROOT_HOME=/root
ARG ROOT_LOCAL=$ROOT_HOME/.local
ARG ROOT_CONFIG=$ROOT_HOME/.config
ARG NVIM_PLUGIN_PATH=$ROOT_LOCAL/share/nvim

RUN 	mkdir -p \
		$NVIM_PLUGIN_PATH \
		$ROOT_LOCAL/state/$NVIM_METADATA \
		$ROOT_LOCAL/cache/$NVIM_METADATA \
		$ROOT_CONFIG/$NVIM_METADATA && \
	chmod -R 777 \
		$ROOT_CONFIG/$NVIM_METADATA \
		$NVIM_PLUGIN_PATH \
		$ROOT_LOCAL

